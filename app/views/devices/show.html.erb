<%=render 'layouts/partials/navbar'%>
<div class="center-style-app">
  <div class="content-wrapper">
    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12">
            <h2><%=t('activerecord.models.device.other')%></h2>
            <p id="notice"><%= notice %></p>
            <div class="card card-primary">
              <div class="card-header">
                <h3><%=t('app_common.shows.showing', model: model_name_singular(Device))%> <%=@device.name%></h3>
                <div class="card-tools">
                    <i class="fa fa-sync-alt"></i></button>
                  <button type="button" class="btn btn-tool btn-sm" data-card-widget="collapse" data-toggle="tooltip"
                          title="Collapse">
                    <i class="fa fa-minus"></i></button>
                </div>
              </div>
              <div class="card-body">
                <form class="form-horizontal">
                  <div class="form-group row">
                    <div class= "col-sm-4 col-form-label">
                      <strong><%= t('activerecord.attributes.device.owner')%></strong>
                    </div>
                    <div class=" col-sm-7">
                      <div class="form-control">
                        <%= @device.user.full_name%>
                      </div> 
                    </div>
                  </div>
                  <div class="form-group row">
                    <div class= "col-sm-4 col-form-label">
                      <strong><%= t('activerecord.attributes.device.name')%></strong>
                    </div>
                    <div class=" col-sm-7">
                      <div class="form-control">
                        <%= @device.name%>
                      </div> 
                    </div>
                  </div>
                  <div class="form-group row">
                    <div class= "col-sm-4 col-form-label">
                      <strong><%= t('activerecord.attributes.device.type_of_device')%></strong>
                    </div>
                    <div class=" col-sm-7">
                      <div class="form-control">
                        <%= @device.type_of_device%>
                      </div> 
                    </div>
                  </div>
                  <div class="form-group row">
                    <div class= "col-sm-4 col-form-label">
                      <strong><%= t('activerecord.attributes.device.number')%></strong>
                    </div>
                    <div class=" col-sm-7">
                      <div class="form-control">
                        <%= @device.number%>
                      </div> 
                    </div>
                  </div>
                  <div class="form-group row">
                    <div class= "col-sm-4 col-form-label">
                      <strong><%= t('activerecord.attributes.device.operative_system')%></strong>
                    </div>
                    <div class=" col-sm-7">
                      <div class="form-control">
                        <%= @device.operative_system%>
                      </div> 
                    </div>
                  </div>
                  <div class="form-group row">
                    <div class= "col-sm-4 col-form-label">
                      <strong><%= t('activerecord.attributes.device.processor')%></strong>
                    </div>
                    <div class=" col-sm-7">
                      <div class="form-control">
                        <%= @device.processor%>
                      </div> 
                    </div>
                  </div>
                  <div class="form-group row">
                    <div class= "col-sm-4 col-form-label">
                      <strong><%= t('activerecord.attributes.device.memory')%></strong>
                    </div>
                    <div class=" col-sm-7">
                      <div class="form-control">
                        <%= @device.memory%>
                      </div> 
                    </div>
                  </div>
                  <div class="form-group row">
                    <div class= "col-sm-4 col-form-label">
                     <strong><%= t('activerecord.attributes.device.mac')%></strong>
                    </div>
                    <div class=" col-sm-7">
                      <div class="form-control">
                        <%= @device.mac%>
                      </div> 
                    </div>
                  </div>
                  <div class="form-group row">
                    <div class="offset-sm-2 col-sm-2">
                      <%= link_to t('helpers.button.back'), :back , class:"btn btn-primary fa fa-arrow-left"%>
                    </div>
                    <div class=" col-sm-1">
                      <%= link_to t('helpers.button.edit'), edit_device_path(@device), class:"btn btn-primary fa fa-edit" %>
                    </div>
                    <div class="offset-sm-2 col-sm-2">
                      <%=link_to t('activerecord.models.maintaince.other'), device_maintainces_path(@device),class:"btn btn-primary fa fa-cog"%>
                    </div>
                  </div>
                </form>
              </div><!-- /.card-body -->
            </div>
            <!-- /.nav-tabs-custom -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
    <%=render 'layouts/partials/footer'%>
  </div>
</div>
    