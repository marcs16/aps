
<div class="card-body">
  <%= form_with(model: device, local: true) do |f| %>
    <% if device.errors.any? %>
      <div id="error_explanation">
        <ul>
          <% device.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  <form class="form-horizontal">
    <div class="form-group row">
      <%= f.label :name,t('activerecord.attributes.device.name'), class:"col-sm-3 col-form-label" %>
      <div class="col-sm-8">
        <%= f.text_field :name, autofocus: true, autocomplete: "text" , class:"form-control"%>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :type_of_device, t('activerecord.attributes.device.type_of_device'), class: "col-sm-3 col-form-label" %>
      <div class="col-sm-8">
        <%= f.select :type_of_device, options_for_type_of_device,{:include_blank => t('app_common.selector.select_type') }, class:"form-control"%> 
      </div>
    </div>
    <div class="form-group row">
      <%=f.label :number, t('activerecord.attributes.device.number'), class:"col-sm-3 col-form-label"%>
      <div class="col-sm-8">
        <%= f.text_field :number, required: true, autofocus: true, class:"form-control"%>
      </div>
    </div>
    <div class="form-group row">
      <%=f.label :operative_system, t('activerecord.attributes.device.operative_system'), class:"col-sm-3 col-form-label"%>
      <div class="col-sm-8">
        <%=f.select :operative_system, options_for_operative_system,{:include_blank=> t('app_common.selector.select_os')}, class:"form-control"%>
      </div>
    </div>
     <div class="form-group row">
      <%=f.label :processor, t('activerecord.attributes.device.proccesor'), class:"col-sm-3 col-form-label"%>
      <div class="col-sm-8">
        <%=f.select :processor, options_for_processor,{:include_blank=> t('app_common.selector.select_processor')}, class:"form-control"%>
      </div>
    </div>
     <div class="form-group row">
      <%=f.label :memory, t('activerecord.attributes.device.memory'), class:"col-sm-3 col-form-label"%>
      <div class="col-sm-8">
        <%=f.select :memory, options_for_memory,{:include_blank=> t('app_common.selector.select_ram')}, class:"form-control"%>
      </div>
    </div>
     <div class="form-group row">
      <%=f.label :mac, t('activerecord.attributes.device.mac'), class:"col-sm-3 col-form-label"%>
      <div class="col-sm-8">
        <%= f.text_field :mac, autofocus: true, class:"form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <div class="offset-sm-2 col-sm-8">
        <%= f.submit class:"btn btn-primary" %>
      </div>
    </div>
    <div class="form-group row">
      <div class="offset-sm-2 col-sm-8">
        <%= link_to t('helpers.button.back'), :back , class:"btn btn-primary fa fa-arrow-left"%>
      </div>
    </div>
  </form>
  <% end %>
</div><!-- /.card-body -->