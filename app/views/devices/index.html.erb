<%= render 'layouts/partials/navbar'%>
<div style="margin-left: 25%;margin-top: 12%;">
  <p id="notice"><%= notice %></p>

  <h1>Devices</h1>

  <table id="devices-table" data-source="<%= devices_path(format: :json)%>">
    <thead>
      <tr>
        <th>Name</th>
        <th>Type of device</th>
        <th>Number</th>
        <th>Operative system</th>
        <th>Processor</th>
        <th>Memory</th>
        <th>Mac</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @devices.each do |device| %>
        <tr>
          <td><%= device.name %></td>
          <td><%= device.type_of_device %></td>
          <td><%= device.number %></td>
          <td><%= device.operative_system %></td>
          <td><%= device.processor %></td>
          <td><%= device.memory %></td>
          <td><%= device.mac %></td>
          <td><%= link_to 'Show', device %></td>
          <td><%= link_to 'Edit', edit_device_path(device) %></td>
          <td><%= link_to 'Destroy', device, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Device', new_device_path %>
  <%= link_to 'salir', destroy_user_session_path , method: :delete%>
</div>