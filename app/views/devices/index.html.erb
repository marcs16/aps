<%= render 'layouts/partials/navbar'%>
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="col-md-4">
        <p id="notice"><%= notice %></p>

        <h1>Devices</h1>

        <table id="devices-datatable" data-source="<%= devices_path(format: :json) %>">
          <thead>
            <tr>
              <th>Usuario </th>
              <th>Dispositivo </th>
              <th>Tipo de Dispositivo </th>
              <th>NÃºmero </th>
              <th>Sistema Operativo </th>
              <th>Procesador </th>
              <th>Memoria </th>
              <th>Mac</th>
              <th>Accione</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <br>
        <% @devices.each do |device| %>
              <tr>
                <td><%=device.user.full_name%></td>
                <td><%= device.name %></td>
                <td><%= device.type_of_device %></td>
                <td><%= device.number %></td>
                <td><%= device.operative_system %></td>
                <td><%= device.processor %></td>
                <td><%= device.memory %></td>
                <td><%= device.mac %></td>
                <td><%= link_to 'Show', device_path(device)%></td>
                <td><%= link_to 'Edit', edit_device_path(device) %></td>
                <td><%= link_to 'Destroy', device, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
        <% end %>
          </tbody>
        </table>


        <%= link_to 'New Device', new_device_path %>
      </div> 
    </div>
  </section>
  <%=render 'layouts/partials/footer'%>
</div>
