<%= render 'layouts/partials/navbar'%>
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="col-md-12">
        <p id="notice"><%= notice %></p>

        <h1>Devices</h1>
        <div style="margin-bottom: 20px;margin-top: 20px; ">
          <%= link_to 'Nueva reunión', new_device_path, class:'btn btn-primary '%>
          <button id="btn-rel" class=" btn btn-primary">Recargar tabla</button>
        </div>
        <table id="devices-datatable" data-source="<%= devices_path(format: :json) %>">
          <thead>
            <tr>
              <th>Usuario</th>
              <th>Dispositivo </th>
              <th>Tipo de Dispositivo </th>
              <th>Número </th>
              <th>Sistema Operativo </th>
              <th>Procesador </th>
              <th>Memoria </th>
              <th>Mac</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
          </tbody>
        </table>
      </div> 
    </div>
  </section>
  <%=render 'layouts/partials/footer'%>
</div>
