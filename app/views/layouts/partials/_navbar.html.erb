<div class="hold-transition sidebar-mini layout-fixed">
  <!-- Site wrapper -->
  <div class="wrapper">
    <!-- Navbar -->
    <nav class="main-header navbar navbar-expand navbar-white navbar-light">
      <!-- Left navbar links -->
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fa fa-bars"></i></a>
        </li>
         <li class="nav-item dropdown">
          <a class="nav-link" data-toggle="dropdown" href="#">
            <i class="fa fa-comments"></i>
            <span class="badge badge-danger navbar-badge">3</span>
          </a>
        <!-- Notifications Dropdown Menu -->

        <li class="nav-item dropdown">
          <a class="nav-link" data-toggle="dropdown" href="#">
            <i class="fa fa-bell"></i>
            <span class="badge badge-warning navbar-badge">15</span>
          </a>
          <div class="dropdown-menu dropdown-menu-lg dropdown-menu-left">
            <span class="dropdown-item dropdown-header">15 Notifications</span>
            <div class="dropdown-divider"></div>
            <a href="#" class="dropdown-item">
              <i class="fa fa-envelope mr-2"></i> 4 new messages
              <span class="float-right text-muted text-sm">3 mins</span>
            </a>
            <div class="dropdown-divider"></div>
            <a href="#" class="dropdown-item">
              <i class="fa fa-users mr-2"></i> 8 friend requests
              <span class="float-right text-muted text-sm">12 hours</span>
            </a>
            <div class="dropdown-divider"></div>
            <a href="#" class="dropdown-item">
              <i class="fa fa-file mr-2"></i> 3 new reports
              <span class="float-right text-muted text-sm">2 days</span>
            </a>
            <div class="dropdown-divider"></div>
            <a href="#" class="dropdown-item dropdown-footer">See All Notifications</a>
          </div>
        </li>
        <div class="dropdown pull-left" id="links-languages">
          <button aria-expanded="true" aria-haspopup="true" class="btn btn-default" data-toggle="dropdown" id="dropdownLanguage" type="button" data-abbr="<%= I18n.locale.to_s %>"><%= t('helpers.button.switch', model: model_name_singular(Language))%>
            <span class="flag-icon flag-icon-<%= I18n.locale.to_s %>"></span>
            <span class="caret"></span>
          </button>
          <ul aria-labelledby="dropdownLanguage" class="dropdown-menu">
            <% Language.where.not(abbreviation: I18n.locale.to_s).each do |language| %>
              <li>
                <a class="change_language" data-abbr="<%= language.abbreviation %>" data-url="<%= change_language_languages_path %>">
                  <span class="flag-icon flag-icon-<%= language.abbreviation %>"></span>
                  <span>
                    <%= language.description %>
                  </span>
                </a>
              </li>
            <% end %>
          </ul>
        </div>
      </ul>

      <!-- SEARCH FORM -->
      

      
    </nav>
    <!-- /.navbar -->

    <!-- Main Sidebar Container -->
    <aside class="main-sidebar sidebar-dark-primary elevation-4">
      <!-- Brand Logo -->
      <div  class="brand-link">
        <%= image_tag 'logo.jpg', alt:"APS",
             class:"brand-image img-circle elevation-3",
             style:"opacity: .8",size:"64"  %>
        <span class="brand-text font-weight-light">APS</span>
      </div>

      <!-- Sidebar -->
      <div class="sidebar">

        <!-- Sidebar user (optional) -->
        <nav class="mt-2">
          <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
            <li class="nav-item has-treeview">
              <div class="nav-link user-panel mt-3 pb-3 mb-3 d-flex">
                <div class="info">
                  <a  class="d-block">
                    <%=current_user.full_name%>
                    <i class="right fa fa-angle-left"></i>
                  </a>
                </div>
              </div>
              <ul class="nav nav-treeview">
                <li class="nav-item">
                  <div  class="nav-link">
                    <i class="fa fa-circle nav-icon"></i>
                    <p><%=link_to t('app_common.navbar.profile.edit_profile'), edit_user_registration_path, style:"font-size: 1.5rem;"%></p>
                  </div>
                </li>
                <li class="nav-item">
                  <div class="nav-link">
                    <i class="fa fa-circle nav-icon"></i>
                    <p><%= link_to t('app_common.navbar.close_session'), destroy_user_session_path , method: :delete ,style:"font-size: 1.5rem;"%></p>
                  </div>
                </li>

              </ul>
            </li>
          </ul>
         
        <!-- Sidebar Menu -->
        <nav class="mt-2">
          <ul class="nav nav-pills nav-sidebar flex-column">
            <li class="nav-item">
              <div  class="nav-link user-panel mt-3 pb-3 mb-3 d-flex">
                <p>
                  <i class=" fa fa-user"></i>
                  <%=link_to t('app_common.navbar.users'), users_index_path, style:"font-size: 1.5rem;color:white;"%></p>
                  <span class="right badge badge-danger"></span>
                </p>
              </div>
            </li>
            <li class="nav-item">
              <div  class="nav-link user-panel mt-3 pb-3 mb-3 d-flex">
                <p>
                  <i class=" fa fa-tv  "></i>
                  <%=link_to t('app_common.navbar.devices'), devices_path, style:"font-size: 1.5rem;color:white;"%></p>
                  <span class="right badge badge-danger"></span>
                </p>
              </div>
            </li>
            <li class="nav-item">
              <div  class="nav-link user-panel mt-3 pb-3 mb-3 d-flex">
                <p>
                  <i class="fa fa-calendar "></i>
                  <%=link_to t('app_common.navbar.meetings'), events_path, style:"font-size: 1.5rem;color:white;"%></p>
                  <span class="right badge badge-danger"></span>
                </p>
              </div>
            </li>
          </ul>
        </nav>
        <!-- /.sidebar-menu -->
      </div>
      <!-- /.sidebar -->
    </aside>
      <!-- /.content -->
  </div>
    <!-- /.content-wrapper -->
</div>