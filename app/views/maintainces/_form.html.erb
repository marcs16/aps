<div class="card-body">
  <%= form_with(model:  [@device,@maintaince], local: true) do |f| %>
    <% if @maintaince.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@maintaince.errors.count, "error") %> prohibited this maintaince from being saved:</h2>

        <ul>
        <% @maintaince.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  <form class="form-horizontal">
    <div class="form-group row">
      <%= f.label :name,"Nombre de mantenimiento", class:"col-sm-3 col-form-label" %>
      <div class="col-sm-8">
        <%= f.text_field :name, autofocus: true, autocomplete: "text" , class:"form-control"%>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :description, "Descripcción de mantenimiento", class: "col-sm-3 col-form-label" %>
      <div class="col-sm-8">
        <%= f.text_area :description, class: "form-control"%> 
      </div>
    </div>
    <div class="form-group row">
      <%=f.label :date, "Fecha de mantenimiento", class:"col-sm-3 col-form-label"%>
      <div class="col-sm-8">
        <%= f.date_field :date, required: true, autofocus: true, class:"forms_field-input"%>
      </div>
    </div>
    <div class="form-group row">
      <div class="offset-sm-2 col-sm-8">
        <%= f.submit class:"btn btn-primary" %>
      </div>
    </div>
    <div class="form-group row">
      <div class="offset-sm-2 col-sm-8">
        <%= link_to "Atrás", :back , class:"btn btn-primary fa fa-arrow-left"%>
      </div>
    </div>
  </form>
  <% end %>
</div><!-- /.card-body -->