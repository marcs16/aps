<%= render 'layouts/partials/navbar'%>
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="col-md-12">
        <p id="notice"><%= notice %></p>

        <h1>Users</h1>
        <div style="margin-bottom: 20px;margin-top: 20px; ">
          <%= link_to 'Nuevo usuario', new_user_registration_path, class:'btn btn-primary '%>
          <button id="btn-rel" class=" btn btn-primary">Recargar tabla</button>
        </div>

        <table  id="users-datatable" data-source="<%= users_index_path(format: :json) %>">
          <thead>
            <tr>
              <th>Nombre </th>
              <th>Tipo de documento </th>
              <th>Documento </th>
              <th>Cargo </th>
              <th>Correo</th>
              <th>Telefono </th>
              <th>Fecha de nacimiento</th>
              <th>Trabaja desde</th>
              <th>Acciones</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
           
          </tbody>
        </table>
        
      </div> 
    </div>
  </section>
  <%=render 'layouts/partials/footer'%>
</div>
